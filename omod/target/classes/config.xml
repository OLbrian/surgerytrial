<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>surgerytrial</id>
	<name>Surgery Trial Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.surgerytrial</package>
	<author>olbrian</author>
	<description>
		Helps to know the process of module creation and other constraints
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/surgerytrial/update.rdf</updateURL>
	<require_version>1.9.7</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.surgerytrial.SurgeryTrialActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.surgerytrial.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
		SurgeryTrial.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with surgerytrial. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

